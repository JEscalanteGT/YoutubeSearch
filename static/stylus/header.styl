.Header
    background-color: blanco
    color: gris2
    padding: 0px 10px
    a
        color: gris2
        padding: 0
        text-decoration: none
        &:hover
            color: gris3
    .Header-logo
        font-size: 0
        padding: 0.375rem 1.25rem 0.375rem 0.625rem
    .Header-nav
        //display: none !important
        display: block
        font-size: 1.5em
        margin-top: 0.625rem
        ul
            list-style: none
            margin: 0
            padding: 0
            li
                display: block
                margin: 0
                padding: 0.5rem 0.25rem
                a
                    display: block
                    font-size: 1.25rem
                    margin: 0
                    padding: 0
                    span
                        font-size: 1.5rem
                        margin-right: 0.5rem

                &:hover
                    background-color rojo
                    border-radius: 0.25rem
                    a, span
                        color: blanco

                
    .Header-menuButton
        background-color: transparent
        border: none
        float: right
        font-size: 2em
        outline: 0
        padding: 0.5rem 0.625rem
        &:hover
            color: gris3
    .Header-logo, .Header-searchBox
        display: inline-block
        vertical-align: top
        
.u-container
    display: block
    margin: 0
    padding: 0.125em 0px
    overflow: hidden